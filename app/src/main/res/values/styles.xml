<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- themes -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>

        <item name="android:statusBarColor">@color/mainBackground</item>
        <item name="android:navigationBarColor">@color/mainBackground</item>
        <item name="android:windowBackground">@color/mainBackground</item>
        <item name="android:colorBackground">@color/mainBackground</item>
        <item name="colorPrimary">@color/mainBackground</item>

        <item name="android:colorForeground">@color/mainForeground</item>
        <item name="android:textColor">@color/mainForeground</item>

        <item name="myHintTextColor">@color/dimColor</item>
        <item name="android:textColorHint">@color/dimColor</item>

        <item name="titleTextColor">@color/titleColor</item>
        <item name="myTitleTextColor">@color/titleColor</item>
        <item name="myHeadingTextColor">@color/headingColor</item>

        <item name="colorAccent">@color/accentColorAchromic</item>

        <item name="android:alertDialogTheme">@style/AppAlertDialog</item>

        <item name="android:itemBackground">@color/weakBackground</item>
    </style>

    <!-- Opaque/Transparent -->
    <style name="AppTheme.opaq">
        <item name="android:windowShowWallpaper">false</item>
    </style>

    <style name="AppTheme.tpar">
        <item name="android:windowShowWallpaper">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.tluc">
        <item name="android:windowShowWallpaper">true</item>

        <item name="android:statusBarColor">@color/dimBackground</item>
        <item name="android:navigationBarColor">@color/dimBackground</item>
        <item name="android:windowBackground">@color/dimBackground</item>
        <item name="android:colorBackground">@color/dimBackground</item>
        <item name="colorPrimary">@color/dimBackground</item>
    </style>

    <!-- Fonts -->
    <style name="AppTheme.ubun">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.sans">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.seri">
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="AppTheme.curs">
        <item name="android:fontFamily">cursive</item>
    </style>

    <style name="AppTheme.mono">
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Color -->
    <style name="AppTheme.achr">
    </style>

    <style name="AppTheme.ambr">
        <item name="colorAccent">@color/accentColorAmber</item>
    </style>

    <style name="AppTheme.pump">
        <item name="colorAccent">@color/accentColorPumpkin</item>
    </style>

    <style name="AppTheme.redx">
        <item name="colorAccent">@color/accentColorRed</item>
    </style>

    <style name="AppTheme.lila">
        <item name="colorAccent">@color/accentColorLilac</item>
    </style>

    <style name="AppTheme.blue">
        <item name="colorAccent">@color/accentColorBlue</item>
    </style>

    <style name="AppTheme.cyan">
        <item name="colorAccent">@color/accentColorCyan</item>
    </style>

    <!-- element styles -->
    <style name="AppAlertDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/weakBackground</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowTitleStyle">@style/AppTheme.PopupTitle</item>
    </style>

    <style name="AppTheme.NormalDatetime">
    </style>

    <style name="AppTheme.NormalText">
    </style>

    <style name="AppTheme.NormalEdit">
    </style>

    <style name="AppTheme.WordClock">
        <!-- size equals that of date -->
        <item name="android:textSize">@dimen/mainDate</item>
    </style>

    <style name="AppTheme.GridClock">
        <item name="android:textSize">@dimen/mainWordClock</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingExtra">-6sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:background">@color/dimBackground</item>
        <item name="android:paddingHorizontal">@dimen/gridClockHPadding</item>
        <item name="android:paddingVertical">@dimen/gridClockVPadding</item>
        <item name="android:layout_marginTop">@dimen/gridClockTopMargin</item>
    </style>

    <style name="AppTheme.HomeNormal">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/homeItem</item>
        <item name="android:padding">@dimen/homeItemPadding</item>
        <item name="android:paddingStart">@dimen/homeItemPaddingStart</item>
    </style>

    <style name="AppTheme.HomeItem">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">@dimen/homeItem</item>
        <item name="android:padding">@dimen/homeItemPadding</item>
        <item name="android:paddingStart">@dimen/homeItemPaddingStart</item>
    </style>

    <style name="AppTheme.DrawerItem">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/drawerItem</item>
        <item name="android:padding">@dimen/drawerItemPadding</item>
        <item name="android:paddingStart">@dimen/drawerItemPaddingStart</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="AppTheme.DrawerInitial">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/drawerItem</item>
        <item name="android:paddingVertical">@dimen/drawerItemPadding</item>
        <item name="android:paddingStart">@dimen/drawerInitialPaddingStart</item>
        <item name="android:textColor">@color/dimColor</item>
    </style>

    <style name="AppTheme.PopupItem">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/popupItem</item>
        <item name="android:paddingVertical">@dimen/popupItemPaddingV</item>
        <item name="android:paddingHorizontal">@dimen/popupItemPaddingH</item>
    </style>

    <style name="AppTheme.PopupShort">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/popupShort</item>
        <item name="android:paddingVertical">@dimen/popupShortPaddingV</item>
        <item name="android:paddingHorizontal">@dimen/popupShortPaddingH</item>
    </style>

    <style name="AppTheme.PopupTiny">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">?myHeadingTextColor</item>
        <item name="android:textSize">@dimen/popupTiny</item>
        <item name="android:paddingTop">@dimen/popupTinyPaddingTop</item>
        <item name="android:paddingBottom">@dimen/popupTinyPaddingBottom</item>
        <item name="android:paddingHorizontal">@dimen/popupTinyPaddingH</item>
    </style>

    <style name="AppTheme.PopupLong">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/popupLong</item>
        <item name="android:paddingVertical">@dimen/popupLongPaddingV</item>
        <item name="android:paddingHorizontal">@dimen/popupLongPaddingH</item>
    </style>

    <style name="AppTheme.PopupSwitch" parent="AppTheme.PopupItem">
    </style>

    <style name="AppTheme.PopupAction" parent="AppTheme.PopupItem">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="AppTheme.PopupTitle">
        <item name="android:textSize">@dimen/popupTitle</item>
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:paddingVertical">@dimen/popupTitlePaddingV</item>
        <item name="android:paddingHorizontal">@dimen/popupTitlePaddingH</item>
    </style>

    <style name="AppTheme.PopupHeading">
        <item name="android:textSize">@dimen/popupHeading</item>
        <item name="android:textColor">?myHeadingTextColor</item>
        <item name="android:paddingVertical">@dimen/popupHeadingPaddingV</item>
        <item name="android:paddingHorizontal">@dimen/popupHeadingPaddingH</item>
    </style>

    <style name="AppTheme.PopupTinyHeading">
        <item name="android:textSize">@dimen/popupTinyHeading</item>
        <item name="android:paddingTop">@dimen/popupTinyHeadingPaddingTop</item>
        <item name="android:paddingBottom">@dimen/popupTinyHeadingPaddingBottom</item>
        <item name="android:paddingHorizontal">@dimen/popupTinyHeadingPaddingH</item>
    </style>

    <style name="AppTheme.PopupTinyHeading.Action">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="AppTheme.WeatherTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/weatherTitle</item>
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/weatherTitlePadV</item>
        <item name="android:paddingHorizontal">@dimen/weatherTitlePadH</item>
        <item name="android:layout_gravity">left</item>
    </style>
    <style name="AppTheme.WeatherHead">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/weatherHead</item>
        <item name="android:textColor">?myHeadingTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/weatherHeadPadV</item>
        <item name="android:paddingHorizontal">@dimen/weatherHeadPadH</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="AppTheme.WeatherSep">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">fill_vertical</item>
        <item name="android:background">@color/dimColor</item>
        <item name="android:layout_rowSpan">4</item>
    </style>
    <style name="AppTheme.WeatherCode">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/weatherCode</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/weatherCodePadV</item>
        <item name="android:paddingHorizontal">@dimen/weatherCodePadH</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="AppTheme.WeatherGrid">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/weatherGrid</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/weatherGridPadV</item>
        <item name="android:paddingHorizontal">@dimen/weatherGridPadH</item>
        <item name="android:layout_gravity">right</item>
    </style>
    <style name="AppTheme.WeatherUnit">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">@dimen/weatherUnit</item>
        <item name="android:textColor">?myHeadingTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/weatherUnitPadV</item>
        <item name="android:paddingHorizontal">@dimen/weatherUnitPadH</item>
        <item name="android:layout_gravity">left</item>
    </style>
</resources>
