<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- themes -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/mainBackground</item>
        <item name="android:colorBackground">@color/mainBackground</item>
        <item name="android:colorForeground">@color/mainForeground</item>
        <item name="android:textColor">@color/mainForeground</item>
        <item name="android:textColorHint">@color/dimColor</item>
        <item name="colorPrimary">@color/mainBackground</item>
        <item name="titleTextColor">@color/titleColor</item>
        <item name="myTitleTextColor">@color/titleColor</item>
        <item name="myHeadingTextColor">@color/headingColor</item>
        <item name="myHintTextColor">@color/dimColor</item>
        <item name="colorAccent">@color/accentColorAchromic</item>
    </style>

    <!-- Ubuntu -->
    <style name="AppTheme.Ubuntu">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.Ubuntu.Achromic">
    </style>

    <style name="AppTheme.Ubuntu.Amber">
        <item name="colorAccent">@color/accentColorAmber</item>
    </style>

    <style name="AppTheme.Ubuntu.Pumpkin">
        <item name="colorAccent">@color/accentColorPumpkin</item>
    </style>

    <style name="AppTheme.Ubuntu.Red">
