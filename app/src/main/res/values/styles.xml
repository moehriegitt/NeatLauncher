    </style>

    <style name="AppTheme.Ubuntu.Lilac">
        <item name="colorAccent">@color/accentColorLilac</item>
    </style>

    <style name="AppTheme.Ubuntu.Blue">
        <item name="colorAccent">@color/accentColorBlue</item>
    </style>

    <style name="AppTheme.Ubuntu.Cyan">
        <item name="colorAccent">@color/accentColorCyan</item>
    </style>

    <!-- Sans -->
    <style name="AppTheme.Sans">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Sans.Achromic">
    </style>

    <style name="AppTheme.Sans.Amber">
        <item name="colorAccent">@color/accentColorAmber</item>
    </style>

    <style name="AppTheme.Sans.Pumpkin">
        <item name="colorAccent">@color/accentColorPumpkin</item>
    </style>

    <style name="AppTheme.Sans.Red">
