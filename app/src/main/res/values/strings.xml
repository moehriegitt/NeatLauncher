        fournoclock
    </string>

    <!--
      Full time lookups: starts with a 24h time (rounded to 60/time_grid_min.length) minutes),
      then the full sequence of words.
      E.g., "00:05 zero five" will use "zero five" at 00h05.
      If nothing is found, time_grid_min is used as a pattern, and time_grid_hour is inserted.
      Empty strings are ignored (may be needed to make arrays non-empty).
      NeatGridClock uses this if the array is not empty, otherwise, time_word_except is used.
    -->
    <string-array name="time_grid_except">
        <item>12:00 noon</item>
    </string-array>

    <!--
      Minutes: this is indexed with a minutes: ((min * time_grid_min.length) / 60).
      Numbers 1, 2, 3, ..., 9 in the item string define which word in the grid
      farthest from the top-left corner will be highlighted, if there are multiple
      possibilities.  NeatWordClock ignores these annotations.
      NeatGridclock queries this first, then time_word_min
    -->
    <string-array name="time_grid_min">
        <item>= oclock</item>
        <item>five past =</item>
        <item>ten past =</item>
        <item>a quarter past =</item>
        <item>twenty past =</item>
        <item>twenty five past =</item>
        <item>half past =</item>
        <item>twenty five to +</item>
        <item>twenty to +</item>
        <item>a quarter to +</item>
        <item>ten to +</item>
        <item>five to +</item>
    </string-array>

    <!--
      Hours: indexed with (hour % 12), inserted by =, +, or - from the min array
      NeatGridclock queries this first, then time_word_hour.
    -->
    <string-array name="time_grid_hour">
        <item>twelve</item>
        <item>one</item>
        <item>two</item>
        <item>three</item>
        <item>four</item>
        <item>2 five</item>
        <item>six</item>
        <item>seven</item>
        <item>eight</item>
        <item>nine</item>
        <item>2 ten</item>
        <item>eleven</item>
    </string-array>

    <!-- NeatWordClock queries this first, then time_grid_except -->
    <string-array name="time_word_except">
    </string-array>

